VERSION=5.0


export PYTHONPATH=/opt/kusu/lib/python

echo "Configuring this node as an Installer"

echo "Setting up the TFTP server"
if [ ! -d /tftpboot/kusu/pxelinux.cfg ] ; then
    mkdir -p /tftpboot/kusu/pxelinux.cfg
fi
chgrp -R apache /tftpboot/kusu/pxelinux.cfg

if [ ! -f /etc/xinetd.d/tftp ] ; then
    echo "ERROR:  Xinetd config for tftp not found"
else
    # Fix the tftp config file
    awk -F' ' ' $1 == "server_args"                    { print "        server_args   = -s /tftpboot/kusu" }
                $1 == "disable"                        { print "        disable       = no" }
                $1 != "disable" && $1 != "server_args" { print $0 }' < /etc/xinetd.d/tftp > /etc/xinetd.d/tftp.new
    mv /etc/xinetd.d/tftp.new /etc/xinetd.d/tftp
fi

if [ ! -f /etc/xinetd.d/rsync ] ; then
    echo "ERROR:  Xinetd config for rsync not found"
else
    # Fix the rsync config file
    awk -F' ' ' $1 == "disable"  { print "        disable       = no" }
                $1 != "disable"  { print $0 }' < /etc/xinetd.d/rsync > /etc/xinetd.d/rsync.new
    mv /etc/xinetd.d/rsync.new /etc/xinetd.d/rsync
fi

# Restart xinetd
if [ -f /etc/init.d/xinetd ] ; then
    /etc/init.d/xinetd stop
    /etc/init.d/xinetd start
else
    echo "ERROR:  Can't find xinetd startup script"
fi
chkconfig xinetd on



# Copy over a kernel and initrd to play with
if [ -f /usr/lib/syslinux/pxelinux.0 ]; then
    echo "Copying over pxelinux.0"
    cp /usr/lib/syslinux/pxelinux.0 /tftpboot/kusu/pxelinux.0
else
    echo "ERROR:  Can't find /usr/lib/syslinux/pxelinux.0"
fi
echo "Copying over a kernel"
REV=`uname -r`
cp /boot/vmlinuz-${REV} /tftpboot/kusu/vmlinuz-${REV}
chmod 644  /tftpboot/kusu/vmlinuz-${REV}

# Setting up permissions
chgrp -R apache /depot/
chgrp -R apache /opt/kusu/cfm

# Setup Apache
if [ ! -d /var/www/html ]; then
    echo "ERROR: Apache is not installed.  Cannot find: /var/www/html"
else
    cd /var/www/html
    ln -s /opt/kusu/cfm cfm
    ln -s /depot/repos repos
    ln -s /depot/images images

    # Generate Kusu.conf
    if [ -f /opt/kusu/bin/genconfig ]; then
	/opt/kusu/bin/genconfig apache_conf > /etc/httpd/conf.d/kusu.conf
	if [ -x /etc/init.d/httpd ]; then
	    /etc/init.d/httpd stop
	    /etc/init.d/httpd start
	fi
    else
	echo "ERROR:  Cannot find genconfig"
    fi
    chkconfig httpd on
fi


# Prepare Mysql
if [ -f /etc/init.d/mysqld ]; then
    chkconfig mysqld on

    /etc/init.d/mysqld stop
    /etc/init.d/mysqld start
    chkconfig mysqld on
    
    # Create default database
    /usr/bin/mysqladmin create kusudb
    /usr/bin/mysql kusudb < /opt/kusu/sql/kusu_createdb.sql
    /usr/bin/mysql kusudb < /opt/kusu/sql/kusu_alterdb.sql

    # Set some sample values in the database table
    # /usr/bin/mysql kusudb < /opt/kusu/sql/kusu_primedb_sample.sql

    # Set user permissions
    /usr/bin/mysql kusudb < /opt/kusu/sql/kusu_dbperms.sql
else
    echo "ERROR:  Could not find mysqld"

fi

# Add entry to motd
echo "Kusu $VERSION Installer Node" >> /etc/motd

# Remove this file so it does not run again.
rm -rf /etc/rc.kusu.d/S01KusuSetup