# This script is responsible for starting the CFMD

# chkconfig: - 98 98
# description: Cluster File Manager for Kusu

. /etc/init.d/functions

prog='cfmd'

start() {
    echo -n $"Starting $prog. "	
  
    # Is the CFMD running
    if [ -n "`/sbin/pidof -o %PPID $prog`" ]; then
	echo -n "$prog: already running"
	failure
	echo
	return 1
    fi

    if [ ! -f /etc/profile.nii ]; then
	echo -n "The CFM should not run on the primary installer. "
	failure
	echo
	return 1
    fi

    if [ -x /opt/kusu/sbin/cfmd ]; then
	/opt/kusu/sbin/cfmd
	RETVAL=$?
    else
	echo -n "$prog: not found"
	RETVAL=1
    fi
    
    [ $RETVAL -eq 0 ] && success || failure
    echo
    return $RETVAL
}


stop() {
    # Stop daemons.
    echo -n $"Stopping $prog: "
    RETVAL=0
    if /sbin/pidof -o %PPID $named >/dev/null; then
	killproc $named -TERM >/dev/null 2>&1
	RETVAL=$?
    fi;

    [ $RETVAL -eq 0 ] && success || failure
    echo
    return $RETVAL
}



case "$1" in
  start)
  	start
	;;
  stop)
  	stop
	;;
  restart)
	stop
	start
	;;
  *)
	echo $"Usage: $0 {start|stop|restart}"
	exit 1
esac
