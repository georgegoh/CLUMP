%define _unpackaged_files_terminate_build 0


Summary: $pkgname package
Name: $pkgname
Version: $pkgversion
Release: $pkgrelease
#if $varExists('licence')
License: $licence
#else
License: LGPL
#end if
#if $varExists('group')
Group: $group
#else
Group: System Environment/Base
#end if
#if $varExists('author')
Vendor: $author
#else
Vendor: Platform Computing Corporation
#end if
BuildRoot: %{_tmppath}/%{name}-%{version}-buildroot
AutoReq: no
#if $varExists('arch')
BuildArch: $arch
#else
BuildArch: noarch
#end if
#if $varExists('dependencies')
#for $dep, $absolute in $dependencies
#if $absolute
Requires: $dep.name = $dep.version
#else
Requires: $dep.name >= $dep.version
#end if
#end for
#end if


%description
#if $varExists('description')
$description
#else
$pkgname package
#end if
%prep


%install

%pre
#if $varExists('prescript')
$prescript
#end if

%post
#if $varExists('postscript')
$postscript
#end if

%preun
#if $varExists('preunscript')
$preunscript
#end if

%postun
#if $varExists('postunscript')
$postunscript
#end if

%clean

%files

