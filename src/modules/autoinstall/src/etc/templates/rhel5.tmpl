install
key --skip
url --url $url
rootpw --iscrypted $rootpw
lang $lang
langsupport --default=$lang $lang
keyboard $keybd
#for $net in $networks
$net
#end for
firewall --disabled
selinux --disabled
firstboot --disable
authconfig --enableshadow --enablemd5
timezone $tz
bootloader --location=mbr
#clearpart --all
clearpart --none
#for $part in $partitions
$part
#end for
reboot
%packages
#for $pkg in $packages
$pkg
#end for
vim-enhanced

%post

