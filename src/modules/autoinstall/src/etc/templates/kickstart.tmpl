install

# Define the installation number.
#if $varExists('instnum')
#if $instnum 
key $instnum
#else
key --skip
#end if
#end if

url --url $url
rootpw --iscrypted $rootpw

lang $lang
#if $varExists('langsupport')
langsupport --default=$langsupport $langsupport
#end if

keyboard $keybd

#for $net in $networks
$net
#end for

firewall --disabled
selinux --disabled
firstboot --disable
authconfig --enableshadow --enablemd5
timezone $tz

#if $mbrbootloader
bootloader --location=mbr
#else
bootloader --location=partition --driveorder=$mbrdriveorder
#end if
skipx

#clearpart --all
clearpart --none

#if $ignoredisk
ignoredisk --drives=$ignoredisk
#end if

#for $part in $partitions
$part
#end for

reboot

%packages
#for $pkg in $packages
$pkg
#end for
@base
ntp

%post

